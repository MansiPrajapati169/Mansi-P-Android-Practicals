<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_intent_fragment_practicals.Activities.AndroidDTasks">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/fragmentNavTask"
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:background="@drawable/buttonripple"
        android:text="@string/container_task"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toTopOf="@id/jetpackNavTask"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/jetpackNavTask"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/jetpackNavTask"
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:background="@drawable/buttonripple"
        android:text="@string/jetpack_task"
        android:textColor="@android:color/background_light"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentNavTask" />

</androidx.constraintlayout.widget.ConstraintLayout>