<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.practicals">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Practicals">

        <activity
            android:name=".ui_widget.Toast"
            android:exported="true" />

        <activity
            android:name=".ui_widget.RegistrationForm"
            android:exported="true"
            android:theme="@style/Theme.Practicals.NoActionBar" />

        <activity
            android:name=".recycler_list_practicals.Activities.BottomNavigation"
            android:exported="false" />
        <activity
            android:name=".recycler_list_practicals.Activities.ViewPagerActivity"
            android:exported="false" />
        <activity
            android:name=".recycler_list_practicals.Activities.ListRecyclerViewPager"
            android:exported="true"/>
        <activity
            android:name=".activity_intent_fragment_practicals.Activities.AndroidDTasks"
            android:exported="false" />
        <activity
            android:name=".activity_intent_fragment_practicals.Activities.FragmentContainerActivity"
            android:exported="true">

        </activity>
        <activity
            android:name=".activity_intent_fragment_practicals.Activities.JetpackNavActivity"
            android:exported="true">

        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".layout_practicals.FrameLayout"
            android:exported="false" />

        <activity
            android:name=".layout_practicals.TableLayout"
            android:exported="false" />

        <activity
            android:name=".layout_practicals.ConstraintLayout"
            android:exported="false" />

        <activity
            android:name=".layout_practicals.RelativeLayout"
            android:exported="false" />

        <activity
            android:name=".layout_practicals.LinearLayout"
            android:exported="false" />

        <activity
            android:name=".layout_practicals.Layouts"
            android:exported="true"/>

        <activity
            android:name=".recycler_list_practicals.Activities.RecyclerViewItemDecoration"
            android:exported="false" />
        <activity
            android:name=".recycler_list_practicals.Activities.RecyclerViewActivity"
            android:exported="true" />
        <activity
            android:name=".recycler_list_practicals.Activities.CustomListView"
            android:exported="false" />
        <activity
            android:name=".recycler_list_practicals.Activities.ListView"
            android:exported="true" />
    </application>

</manifest>